{
  "name": "@hydrokit/examples",
  "version": "0.3.1",
  "private": true,
  "dependencies": {
    "@hydrokit/button": "^0.3.1",
    "@hydrokit/checkbox": "^0.3.1",
    "@hydrokit/formfield": "^0.3.1",
    "@hydrokit/list": "^0.3.1",
    "@hydrokit/popover-menu": "^0.3.1",
    "@hydrokit/textfield": "^0.3.1",
    "@hydrokit/theme": "^0.3.1",
    "@hydrokit/utils": "^0.3.1",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "4.1.2",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-scripts-ts": "2.8.0"
  },
  "scripts": {
    "build-css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "start-js": "react-scripts-ts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts-ts build",
    "build": "npm-run-all build-css build-js",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject",
    "surge": "yarn build && node_modules/.bin/surge -p ./build/ -d https://hydrokit.surge.sh"
  },
  "devDependencies": {
    "@types/jest": "21.1.9",
    "@types/node": "8.5.2",
    "@types/react": "16.0.31",
    "@types/react-dom": "16.0.3",
    "sass-lint": "1.12.1",
    "surge": "0.19.0"
  }
}
